@model SalespersonListModel

<h1>Sales Persons</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Start Date</th>
            <th>Termination Date</th>
            <th>Manager</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salesperson in Model.Salespersons)
        {
            <tr>
                <td>@salesperson.FirstName</td>
                <td>@salesperson.LastName</td>
                <td>@salesperson.Address</td>
                <td>@salesperson.Phone</td>
                <td>@salesperson.StartDate.ToShortDateString()</td>
                <td>@salesperson.TerminationDate?.ToShortDateString()</td>
                <td>@salesperson.Manager?.FirstName @salesperson.Manager?.LastName</td>
                <td>
                    <a asp-area="" asp-controller="SalesPerson" asp-route-id="@salesperson.SalespersonId" asp-action="UpdateSalesPerson">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>