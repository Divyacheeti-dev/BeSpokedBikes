@model CustomerListModel

<h1>Customers</h1>

<div class="text-end">
    <a class="btn btn-primary" asp-area="" asp-controller="Customer" asp-action="CreateCustomer">Create Customer</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Start Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Address</td>
                <td>@customer.Phone</td>
                <td>@customer.StartDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>